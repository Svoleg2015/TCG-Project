            android:layout_height="wrap_content"
            android:text="0" />

        <TextView
            android:id="@+id/ManaAc3"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="75dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
