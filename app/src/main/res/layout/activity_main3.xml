            app:srcCompat="@drawable/back" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ManaOp1"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="40dp"
